<div id="<%= dom_id category %>">
  <div class="flex justify-between px-2">
    <p class="my-5">
      <%= category.name %>
    </p>
    <% if category.discussions_count&.positive? %>
      <p class="my-5 px-2 bg-teal-400 rounded-3xl">
        <%= category.discussions_count %>
      </p>
    <% end %>
  </div>
</div>
