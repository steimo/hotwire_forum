<div class="w-full mt-4 flex justify-around items-center">
  <h1 class="text-3xl font-bold">Notifications</h1>
  <%= button_to read_notifications_path, method: :post, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded" do %>
    Mark all as read
  <% end %>
</div>
<h3 class="text-2xl font-medium text-center mt-5">What's new?</h3>
<div class="flex flex-col gap-2 mt-4 p-8">
  <% if @notifications.any? %>
    <%= render @notifications %>
  <% else %>
    <div class="mb-3 text-l font-medium">No new notifications</div>
  <% end %>
  <% if @previous_notifications.any? %>
    <h4 class="mt-6 text-xl border-b">Previously Seen</h4>
    <%= render(partial: "notification", collection: @previous_notifications) %>
  <% end %>
</div>
