<div class="mt-6 w-full flex justify-center items-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "p-16 bg-white rounded-xl drop-shadow-lg space-y-5" }) do |f| %>
    <h2 class="text-center font-bold text-2xl">Sign up</h2>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field flex flex-col space-y-2">
      <%= f.label :email, class: "text-sm font-light" %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 rounded-md border border-slate-400" %>
    </div>
    <div class="field flex flex-col space-y-2">
      <%= f.label :username, class: "text-sm font-light" %><br>
      <%= f.text_field :username, class: "w-full px-3 py-2 rounded-md border border-slate-400" %>
    </div>
    <div class="field flex flex-col space-y-2">
      <%= f.label :password, class: "text-sm font-light" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-md border border-slate-400" %>
    </div>
    <div class="field flex flex-col space-y-2">
      <%= f.label :password_confirmation, class: "text-sm font-light" %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-md border border-slate-400" %>
    </div>
    <div class="actions">
      <%= f.submit "Sign up", class: "w-full px-10 py-2 bg-blue-600 text-white rounded-md
            hover:bg-blue-500 hover:drop-shadow-md duration-300 ease-in", style: "cursor:pointer" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
