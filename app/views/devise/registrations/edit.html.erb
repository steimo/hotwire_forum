<div class="m-6 w-full flex justify-center items-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "p-10 bg-white rounded-xl drop-shadow-lg space-y-5" }) do |f| %>
    <h2 class="text-center font-bold text-2xl">Edit <%= resource_name.to_s.humanize %></h2>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field flex flex-col space-y-2">
      <%= f.label :email, class: "text-sm font-light" %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 rounded-md border border-slate-400" %>
    </div>
    <div class="field flex flex-col space-y-2">
      <%= f.label :username, class: "text-sm font-light" %><br>
      <%= f.text_field :username, class: "w-full px-3 py-2 rounded-md border border-slate-400" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field flex flex-col space-y-2">
      <%= f.label :password, class: "text-sm font-light" %> <i>(leave blank if you don't want to change it)</i><br>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-md border border-slate-400" %>
      <% if @minimum_password_length %>
        <br>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
    <div class="field flex flex-col space-y-2">
      <%= f.label :password_confirmation, class: "text-sm font-light" %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 rounded-md border border-slate-400" %>
    </div>
    <div class="field flex flex-col space-y-2">
      <%= f.label :current_password, class: "text-sm font-light" %> <i>(we need your current password to confirm your changes)</i><br>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 rounded-md border border-slate-400" %>
    </div>
    <div class="actions">
      <%= f.submit "Update", class: "w-full px-10 py-2 bg-blue-600 text-white rounded-md
            hover:bg-blue-500 hover:drop-shadow-md duration-300 ease-in", style: "cursor:pointer" %>
    <% end %>
    <p class="mt-2">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "no-underline hover:underline text-blue-500 text-lg" %>
    </p>
    <div class="mt-4">
      <%= link_to "Back", :back, class: "hover:underline" %>
    </div>
  </div>
</div>
