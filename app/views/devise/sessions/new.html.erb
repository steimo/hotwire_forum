<div class="mt-6 w-full flex justify-center items-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "p-16 bg-white rounded-xl drop-shadow-lg space-y-5" }) do |f| %>
    <h2 class="text-center font-bold text-2xl">Log in</h2>
    <div class="field flex flex-col space-y-2">
      <%= f.label :email, class: "text-sm font-light" %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 rounded-md border border-slate-400" %>
    </div>
    <div class="field flex flex-col space-y-2">
      <%= f.label :password, class: "text-sm font-light" %><br>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 rounded-md border border-slate-400" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "text-sm font-light" %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Log in", class: "w-full px-10 py-2 bg-blue-600 text-white rounded-md
            hover:bg-blue-500 hover:drop-shadow-md duration-300 ease-in", style: "cursor:pointer" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
