<div class="mt-6 w-full flex justify-center items-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "p-16 bg-white rounded-xl drop-shadow-lg space-y-5"}) do |f| %>
    <h2 class="text-center font-bold text-2xl">Forgot your password?</h2>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field flex flex-col space-y-2">
      <%= f.label :email, class: "text-sm font-light" %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 rounded-md border border-slate-400" %>
    </div>
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "w-full px-10 py-2 bg-blue-600 text-white rounded-md
            hover:bg-blue-500 hover:drop-shadow-md duration-300 ease-in", style: "cursor:pointer" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
