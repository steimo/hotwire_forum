<%= turbo_frame_tag dom_id(discussion) do %>
  <div class="flex items-center justify-around m-4">
    <div class="flex flex-col items-center gap-2">
      <h1 class="text-xl font-bold"><%= discussion.name %></h1>
      <span>
        <% if discussion.pinned %>
          <span class="text-sm bg-teal-500 rounded-3xl px-3 py-1 text-white">Pinned</span>
        <% end %>
        <% if discussion.closed %>
          <span class="text-sm font-bold text-red-500 px-3 py-1">Closed</span>
        <% end %>
      </span>
    </div>
    <div class="flex gap-2">
      <% if Current.user == discussion.user || Current.user.admin? %>
        <%= link_to "Edit", edit_discussion_path(discussion) %> |
        <%= button_to "Delete", discussion, method: :delete, form: {data: {turbo_confirm: "Are you sure ? This cannot be undone"}} %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
