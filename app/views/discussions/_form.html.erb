<%= form_with(model: discussion) do |form| %>

  <% if discussion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(discussion.errors.count, "error") %> prevented this discussion from being saved:</h2>
      <ul>
        <% discussion.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-400" %>
    <%= form.text_field :name, placeholder: "How do I...?", class: "flex items-center border-2 mb-8 py-2 px-3 rounded-2xl" %>
  </div>

  <div class="mb-3">
    <%= form.label :pinned, class: "form-check-label inline-block text-gray-800" %>
    <%= form.check_box :pinned, class: "orm-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer" %>
  </div>

  <div class="mb-6">
    <%= form.label :closed, class: "form-check-label inline-block text-gray-800" %>
    <%= form.check_box :closed, class: "orm-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer" %>
  </div>
  <div class="mb-3 flex justify-center">
  <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-xl" %>
  </div>
<% end %>
