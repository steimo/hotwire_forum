<div id="<%= dom_id(discussion) %>" class="ml-2 mb-4">
  <h2 class="text-xl">
    <%= link_to discussion.name, discussion, class: "text-blue-600" %>
  </h2>
  Pinned: <%= discussion.pinned %> | Closed: <%= discussion.closed %> <br>
  Posted in: <%= discussion.category_name %> | Posts <%= discussion.posts_count %>
  <div>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_discussion_path(discussion) %> |
      <%= button_to "Delete", discussion, method: :delete, form: {data: {turbo_confirm: "Are you sure ? This cannot be undone"}} %>
    </div>
  </div>
</div>
